<% layout('layout/boilerplate') %>

    <!-- [ Main Content ] start -->
    
        <div class="pcoded-wrapper">
            <div class="pcoded-content">
                <div class="pcoded-inner-content">
                    <!-- [ breadcrumb ] start -->

                    <!-- [ breadcrumb ] end -->
                    <div class="main-body">
                        <div class="page-wrapper">
                            <!-- [ Main Content ] start -->
                            <div class="row">
                                <!--[ daily sales section ] start-->
                                <div class="col-md-6 col-xl-4">
                                    <div class="card daily-sales">
                                        <div class="card-block">
                                            <h6 class="mb-4">Shareholder</h6>
                                            <div class="row d-flex align-items-center">
                                                <div class="col-9">
                                                    <%const shareholder = employees.filter(element => element["shareholderStatus"])%>
                                                    <h3 class="f-w-300 d-flex align-items-center m-b-0"><i
                                                            class="feather icon-arrow-up text-c-green f-30 m-r-10"><%=shareholder.length%></i></h3>
                                                </div>

                                                <div class="col-3 text-right">
                                                    <p class="m-b-0">67%</p>
                                                </div>
                                            </div>
                                            <div class="progress m-t-30" style="height: 7px;">
                                                <div class="progress-bar progress-c-theme" role="progressbar"
                                                    style="width: 50%;" aria-valuenow="50" aria-valuemin="0"
                                                    aria-valuemax="100"></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!--[ daily sales section ] end-->
                                <!--[ Monthly  sales section ] starts-->
                                <div class="col-md-6 col-xl-4">
                                    <div class="card Monthly-sales">
                                        <div class="card-block">
                                            <h6 class="mb-4">Total number of vacation days</h6>
                                            <div class="row d-flex align-items-center">
                                                <div class="col-9">
                                                    <%const totalVacation = employees.reduce((sum, element)=> sum + element['vacationDay'], 0)%>
                                                    <h3 class="f-w-300 d-flex align-items-center  m-b-0"><i
                                                            class="feather icon-arrow-down text-c-red f-30 m-r-10"></i><%=totalVacation%></h3>
                                                </div>
                                                <div class="col-3 text-right">
                                                    <p class="m-b-0">36%</p>
                                                </div>
                                            </div>
                                            <div class="progress m-t-30" style="height: 7px;">
                                                <div class="progress-bar progress-c-theme2" role="progressbar"
                                                    style="width: 35%;" aria-valuenow="35" aria-valuemin="0"
                                                    aria-valuemax="100"></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!--[ Monthly  sales section ] end-->
                                <!--[ year  sales section ] starts-->
                                <div class="col-md-12 col-xl-4">
                                    <div class="card yearly-sales">
                                        <div class="card-block">
                                            <h6 class="mb-4">Total earning</h6>
                                            <div class="row d-flex align-items-center">
                                                <div class="col-9">
                                                    <%const totalEarning = earningByShareholder[0]['earning'] + earningByShareholder[1]['earning']%>
                                                    <h3 class="f-w-300 d-flex align-items-center  m-b-0"><i
                                                            class="feather icon-arrow-up text-c-green f-30 m-r-10"></i><%=totalEarning%></h3>
                                                </div>
                                                <div class="col-3 text-right">
                                                    <p class="m-b-0">80%</p>
                                                </div>
                                            </div>
                                            <div class="progress m-t-30" style="height: 7px;">
                                                <div class="progress-bar progress-c-theme" role="progressbar"
                                                    style="width: 70%;" aria-valuenow="70" aria-valuemin="0"
                                                    aria-valuemax="100"></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xl-12 m-b-50">
                                    <canvas id="myChart"></canvas>
                                </div>
                                <div class="col-xl-4 m-b-30 mx-auto">
                                    <h3 class="text-center">Earning by Shareholder</h3>
                                    <canvas id="myChart2"></canvas>
                                </div>
                                <div class="col-xl-4 m-b-30 mx-auto">
                                    <h3 class="text-center">Vacation by Shareholder</h3>
                                    <canvas id="myChart3"></canvas>
                                </div>

                                <div class="col-xl-8 col-md-12 m-b-30 mx-auto">
                                    <ul class="nav nav-tabs" id="myTab" role="tablist">
                                        <li class="nav-item">
                                            <a class="nav-link" id="home-tab" data-toggle="tab" href="#home" role="tab"
                                                aria-controls="home" aria-selected="false">Shareholder Vacation</a>
                                        </li>   
                                        <li class="nav-item">
                                            <a class="nav-link active show" id="profile-tab" data-toggle="tab"
                                                href="#profile" role="tab" aria-controls="profile"
                                                aria-selected="true">Shareholder Earning</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" id="contact-tab" data-toggle="tab" href="#contact"
                                                role="tab" aria-controls="contact" aria-selected="false">Department Earning</a>
                                        </li>
                                    </ul>
                                    <div class="tab-content" id="myTabContent">
                                        <div class="tab-pane fade" id="home" role="tabpanel" aria-labelledby="home-tab">
                                            <table class="table table-hover">
                                                <thead>
                                                    <tr>
                                                        <th>Employee ID<br></th>
                                                        <th>Full Name</th>
                                                        <th>Shareholder</th>
                                                        <th>Vacations</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <%for (const employee of employees) {%>
                                                        <tr>
                                                            <td>
                                                                <h6 class="m-0"><%=employee['idEmployee']%></h6>
                                                            </td>
                                                            <td>
                                                                <h6 class="m-0"><%=`${employee['lastName']} ${employee['firstName']}`%></h6>
                                                            </td>
                                                            <td>
                                                                <h6 class="m-0"><%=(employee['shareholderStatus']) ? 'True' : 'False'%></h6>
                                                            </td>
                                                            <td>
                                                                <h6 class="m-0 text-c-green"><%=employee['vacationDay']%></h6>
                                                            </td>
                                                        </tr>
                                                    <%}%>
                                                </tbody>
                                            </table>
                                        </div>

                                        <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="home-tab">
                                            <table class="table table-hover">
                                                <thead>
                                                    <tr>
                                                        <th>Employee ID<br></th>
                                                        <th>Full Name</th>
                                                        <th>Shareholder</th>
                                                        <th>Pay Rates</th>
                                                        <th>Pay Amount</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <%for (const employee of employees) {%>
                                                        <tr>
                                                            <td>
                                                                <h6 class="m-0"><%=employee['idEmployee']%></h6>
                                                            </td>
                                                            <td>
                                                                <h6 class="m-0"><%=`${employee['lastName']} ${employee['firstName']}`%></h6>
                                                            </td>
                                                            <td>
                                                                <h6 class="m-0"><%=(employee['shareholderStatus']) ? 'True' : 'False'%></h6>
                                                            </td>
                                                            <td>
                                                                <%const amount = payrates.find(payrate => payrate['idPayRates']===employee['payRateId'])%>
                                                               
                                                                <h6 class="m-0 text-c-green"><%=employee['payRate']%></h6>
                                                            </td>
                                                            <td>
                                                                <h6 class="m-0 text-c-green"><%=amount['payAmount']%></h6>
                                                            </td>
                                                        </tr>
                                                    <%}%>
                                                </tbody>
                                            </table>
                                        </div>

                                        <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="home-tab">
                                            <table class="table table-hover">
                                                <thead>
                                                    <tr>
                                                        <th>Employee ID<br></th>
                                                        <th>Full Name</th>
                                                        <th>Department</th>
                                                        <th>Pay Rates</th>
                                                        <th>Pay Amount</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <%for (const jobhistory of jobHistories) {%>
                                                        <tr>
                                                            <td>
                                                                <%const employee = employees.find(employee => {return jobhistory['employeeId']===employee['idEmployee']})%>
                                                                <h6 class="m-0"><%=employee['idEmployee']%></h6>
                                                            </td>
                                                            <td>
                                                                <h6 class="m-0"><%=`${employee['lastName']} ${employee['firstName']}`%></h6>
                                                            </td>
                                                            <td>
                                                               
                                        
                                                                <h6 class="m-0"><%=jobhistory['department']%></h6>
                                                            </td>
                                                            <td>
                                                                
                                                                <h6 class="m-0 text-c-green"><%=employee['payRate']%></h6>
                                                            </td>
                                                            <td>
                                                                <%const amount = payrates.find(payrate => payrate['idPayRates']===employee['payRateId'])%>
                                                                <h6 class="m-0 text-c-green"><%=amount['payAmount']%></h6>
                                                            </td>
                                                        </tr>
                                                    <%}%>
                                                </tbody>
                                            </table>
                                        </div>

                                    </div>
                                </div>
                                <!--[ year  sales section ] end-->
                                <!--[ Recent Users ] start-->
                               
                                <!--[ Recent Users ] end-->

                                <!-- [ statistics year chart ] start -->

                                <!-- [ statistics year chart ] end -->
                                <!--[social-media section] start-->


                                <!-- [ rating list ] end-->
                               
                            </div>
                            <!-- [ Main Content ] end -->
                        </div>
                    </div>
                </div>
            </div>
        </div>


    <!-- Required Js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
